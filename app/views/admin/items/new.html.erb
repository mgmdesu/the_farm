<div class="container">
  <div class="row">
    <h4>商品登録</h4>
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
        <table>
          <tr>
            <th>商品画像</th>
            <td><%= f.file_field :image %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= f.text_field :introduction %></td>
          </tr>
          <tr>
            <th>価格（税抜）</th>
            <td><%= f.text_field :price %> 円</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td>
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "販売中" %>
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "販売停止中" %>
            </td>
          </tr>
        </table>
        <%= f.submit "新規登録", class: "btn btn-primary" %>
      <% end %>
    
  </div>
</div>